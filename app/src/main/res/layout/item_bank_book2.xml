<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/shape_pink0_fill_15_rect"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bank_book2_logo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_profile"
        android:layout_marginStart="19dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_bank_book2_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book2_name"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_bank_book2_logo"/>

    <TextView
        android:id="@+id/tv_bank_book2_leftover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_bank_book2_leftover"
        android:textAppearance="@style/TextAppearance.KakaoBank.head7_semi_16"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_book2_name"
        app:layout_constraintStart_toEndOf="@id/iv_bank_book2_logo"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_btn_more"
        android:background="@null"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>