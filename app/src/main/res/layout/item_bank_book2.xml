<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bank_book2"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:src="@drawable/box_bank_book2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_logo_yellow"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_profile"
        android:layout_marginStart="19dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book2"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book2"/>

    <TextView
        android:id="@+id/tv_bank_book2_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book2_name"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/black2"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book2"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book2"/>

    <TextView
        android:id="@+id/tv_bank_book2_leftover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book2_leftover"
        android:textAppearance="@style/TextAppearance.KakaoBank.head7_semi_16"
        android:textColor="@color/black2"
        android:layout_marginStart="55dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book2"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book2"/>

    <ImageView
        android:id="@+id/iv_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_more"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book2"
        app:layout_constraintEnd_toEndOf="@id/iv_bank_book2"/>

</androidx.constraintlayout.widget.ConstraintLayout>