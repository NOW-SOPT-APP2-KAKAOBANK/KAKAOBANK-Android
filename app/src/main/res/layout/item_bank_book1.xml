<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bank_book1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/box_bank_book1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_logo_yellow"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_logo_yellow"
        android:layout_marginStart="19dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book1"/>

    <TextView
        android:id="@+id/tv_bank_book1_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book1_name"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black2"
        android:textSize="11sp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book1"/>

    <TextView
        android:id="@+id/tv_bank_book1_leftover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book1_leftover"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black2"
        android:textSize="16sp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book1"/>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_star"
        android:layout_marginStart="109dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book1"/>

    <ImageView
        android:id="@+id/iv_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_more"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintEnd_toEndOf="@id/iv_bank_book1"/>

    <ImageView
        android:id="@+id/iv_btn_transfer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_transfer"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintEnd_toEndOf="@id/iv_bank_book1"/>

    <ImageView
        android:id="@+id/iv_btn_card"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_card"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_transfer"/>

    <View
        android:id="@+id/v_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow1"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book1"
        app:layout_constraintEnd_toEndOf="@id/iv_bank_book1"/>


    <TextView
        android:id="@+id/tv_safe_box"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_safe_box"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black2"
        android:textSize="11sp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="135dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book1"/>

    <TextView
        android:id="@+id/tv_safe_box_leftover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_safe_box_leftover"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black2"
        android:textSize="14sp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="133dp"
        app:layout_constraintTop_toTopOf="@id/iv_bank_book1"
        app:layout_constraintEnd_toEndOf="@id/iv_bank_book1"/>

</androidx.constraintlayout.widget.ConstraintLayout>