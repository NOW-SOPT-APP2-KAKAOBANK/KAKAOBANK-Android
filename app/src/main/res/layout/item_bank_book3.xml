<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_bank_book3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape_blue0_fill_15_rect"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bank_book3_logo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_bank_book3_logo"
        android:layout_marginStart="19dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="@id/cl_bank_book3"
        app:layout_constraintStart_toStartOf="@id/cl_bank_book3"/>

    <TextView
        android:id="@+id/tv_bank_book3_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_name"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/iv_bank_book3_logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_bank_book3_leftover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_leftover"
        android:textAppearance="@style/TextAppearance.KakaoBank.head7_semi_16"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_book3_name"
        app:layout_constraintStart_toEndOf="@id/iv_bank_book3_logo"/>

    <TextView
        android:id="@+id/tv_bank_book3_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_withdraw"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/blue4"
        android:layout_marginStart="38dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_book3_leftover"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book3_logo"/>

    <TextView
        android:id="@+id/tv_bank_book3_withdraw_money"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_withdraw_money"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/blue4"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/tv_bank_book3_withdraw"
        app:layout_constraintStart_toEndOf="@id/tv_bank_book3_withdraw"/>

    <TextView
        android:id="@+id/tv_emergency_fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:paddingStart="4dp"
        android:paddingEnd="5dp"
        android:layout_gravity="center"
        android:text="@string/tv_emergency_fund"
        android:textAppearance="@style/TextAppearance.KakaoBank.cap2_semi_9"
        android:textColor="@color/white0"
        android:gravity="center"
        android:background="@drawable/shape_blue3_fill_20_rect"
        android:layout_marginTop="29dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_bank_book3_name"/>

    <ImageView
        android:id="@+id/iv_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_more"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_btn_transfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:text="@string/tv_btn_transfer"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:background="@drawable/shape_blue1_fill_20_rect"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_btn_more"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_btn_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:text="@string/tv_btn_card"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:background="@drawable/shape_blue1_fill_20_rect"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toStartOf="@id/tv_btn_transfer"
        app:layout_constraintTop_toTopOf="@id/tv_btn_transfer"/>

</androidx.constraintlayout.widget.ConstraintLayout>