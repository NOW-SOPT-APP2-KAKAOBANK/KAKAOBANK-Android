<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_bank_book3"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape_blue0_fill_15_rect"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="17dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bank_book3_logo"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_bank_book3_logo"
        android:layout_marginStart="19dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toTopOf="@id/cl_bank_book3"
        app:layout_constraintStart_toStartOf="@id/cl_bank_book3"/>

    <TextView
        android:id="@+id/tv_bank_book3_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_name"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_bank_book3_logo"
        app:layout_constraintStart_toEndOf="@id/iv_bank_book3_logo"/>

    <TextView
        android:id="@+id/tv_bank_book3_leftover"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_leftover"
        android:textAppearance="@style/TextAppearance.KakaoBank.head7_semi_16"
        android:textColor="@color/black2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_book3_name"
        app:layout_constraintStart_toEndOf="@id/iv_bank_book3_logo"/>

    <TextView
        android:id="@+id/tv_bank_book3_withdraw"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_withdraw"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/blue4"
        android:layout_marginStart="38dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_book3_leftover"
        app:layout_constraintStart_toStartOf="@id/iv_bank_book3_logo"/>

    <TextView
        android:id="@+id/tv_bank_book3_withdraw_money"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_bank_book3_withdraw_money"
        android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
        android:textColor="@color/blue4"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/tv_bank_book3_withdraw"
        app:layout_constraintStart_toEndOf="@id/tv_bank_book3_withdraw"/>

    <FrameLayout
        android:id="@+id/fl_emergency_fund"
        android:layout_width="33dp"
        android:layout_height="16dp"
        android:background="@drawable/shape_blue3_fill_20_rect"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toTopOf="@id/tv_bank_book3_name"
        app:layout_constraintStart_toEndOf="@id/tv_bank_book3_name">

        <TextView
            android:id="@+id/tv_emergency_fund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tv_emergency_fund"
            android:textAppearance="@style/TextAppearance.KakaoBank.cap2_semi_9"
            android:textColor="@color/white0"
            android:gravity="center"
            android:background="@android:color/transparent"/>

    </FrameLayout>

    <ImageButton
        android:id="@+id/ib_btn_more"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_more"
        android:background="@null"
        android:layout_marginStart="135dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@id/fl_emergency_fund"
        app:layout_constraintStart_toEndOf="@id/fl_emergency_fund"/>

    <FrameLayout
        android:id="@+id/fl_btn_transfer"
        android:layout_width="48dp"
        android:layout_height="31dp"
        android:background="@drawable/shape_blue1_fill_20_rect"
        android:layout_marginStart="145dp"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@id/ib_btn_more"
        app:layout_constraintStart_toEndOf="@id/tv_bank_book3_name">

        <TextView
            android:id="@+id/tv_btn_transfer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_btn_transfer"
            android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_btn_card"
        android:layout_width="48dp"
        android:layout_height="31dp"
        android:background="@drawable/shape_blue1_fill_20_rect"
        android:layout_marginEnd="7dp"
        app:layout_constraintTop_toTopOf="@id/fl_btn_transfer"
        app:layout_constraintEnd_toStartOf="@id/fl_btn_transfer">

        <TextView
            android:id="@+id/tv_btn_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/tv_btn_card"
            android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>