<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_joint_account_box"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape_darkgray0_fill_15_rect"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="17dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_joint_account"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_joint_account"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white0"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="@id/cl_joint_account_box"
        app:layout_constraintStart_toStartOf="@id/cl_joint_account_box"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_leading"
        android:layout_marginStart="218dp"
        android:layout_marginTop="-3dp"
        app:layout_constraintTop_toTopOf="@id/tv_joint_account"
        app:layout_constraintStart_toEndOf="@id/tv_joint_account"/>

</androidx.constraintlayout.widget.ConstraintLayout>