<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_joint_account_box"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:src="@drawable/rounded_box_darkgray"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_joint_account"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="모임통장"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white0"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toTopOf="@id/iv_joint_account_box"
        app:layout_constraintStart_toStartOf="@id/iv_joint_account_box"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_leading"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="@id/iv_joint_account_box"
        app:layout_constraintEnd_toEndOf="@id/iv_joint_account_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>