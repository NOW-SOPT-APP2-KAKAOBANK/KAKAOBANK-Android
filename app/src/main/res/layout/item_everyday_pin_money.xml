<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_everyday_pin_money"
        android:layout_width="116dp"
        android:layout_height="122dp"
        android:src="@drawable/shape_darkgray0_fill_15_rect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_pig"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:src="@drawable/ic_pig"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/iv_everyday_pin_money"
        app:layout_constraintStart_toStartOf="@id/iv_everyday_pin_money"/>

    <TextView
        android:id="@+id/tv_everyday"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="매일"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white0"
        android:textSize="14sp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/iv_pig"
        app:layout_constraintStart_toStartOf="@id/iv_pig"/>

    <TextView
        android:id="@+id/tv_pin_money"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="용돈 받기"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white0"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_everyday"
        app:layout_constraintStart_toStartOf="@id/tv_everyday"/>

</androidx.constraintlayout.widget.ConstraintLayout>