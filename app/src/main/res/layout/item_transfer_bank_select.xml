<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_transfer_bank_select"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_line_circle"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_item_Transfer_bank_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:textAppearance="@style/TextAppearance.KakaoBank.body7_regular_14"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_transfer_bank_select"
            app:layout_constraintStart_toEndOf="@id/iv_item_transfer_bank_select"
            app:layout_constraintTop_toTopOf="@id/iv_item_transfer_bank_select"
            tools:text="카카오뱅크" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>