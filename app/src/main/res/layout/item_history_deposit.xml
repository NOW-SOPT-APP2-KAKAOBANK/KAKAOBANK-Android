<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="23dp"
        android:text="@string/history_date"
        android:textAppearance="@style/TextAppearance.KakaoBank.number3_regular_13"
        android:textColor="@color/gray11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/history_name"
        android:textAppearance="@style/TextAppearance.KakaoBank.body4_regular_15"
        android:textColor="@color/black2"
        app:layout_constraintStart_toEndOf="@+id/tv_history_date"
        app:layout_constraintTop_toTopOf="@+id/tv_history_date" />

    <TextView
        android:id="@+id/tv_history_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/history_tag"
        android:textAppearance="@style/TextAppearance.KakaoBank.body4_regular_15"
        android:textColor="@color/deep_blue0"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/tv_history_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_name" />

    <TextView
        android:id="@+id/tv_history_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="@string/history_balance"
        android:textAppearance="@style/TextAppearance.KakaoBank.head7_semi_16"
        android:textColor="@color/black2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_history_name" />

    <TextView
        android:id="@+id/tv_history_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="23dp"
        android:text="@string/history_balance"
        android:textAppearance="@style/TextAppearance.KakaoBank.number3_regular_13"
        android:textColor="@color/gray10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_history_spent"
        app:layout_constraintTop_toBottomOf="@+id/tv_history_spent" />
</androidx.constraintlayout.widget.ConstraintLayout>