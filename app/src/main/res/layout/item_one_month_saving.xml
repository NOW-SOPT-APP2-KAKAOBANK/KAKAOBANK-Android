<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_one_month_saving_box"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:src="@drawable/rounded_box_darkgray"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <ImageView
        android:id="@+id/iv_lion_31"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_lion_31"
        android:layout_marginStart="23dp"
        android:layout_marginTop="29.5dp"
        app:layout_constraintStart_toStartOf="@id/iv_one_month_saving_box"
        app:layout_constraintTop_toTopOf="@id/iv_one_month_saving_box"/>

    <TextView
        android:id="@+id/tv_everyday_saving"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_everyday_saving"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray8"
        android:textSize="12sp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="21.5dp"
        app:layout_constraintTop_toTopOf="@id/iv_one_month_saving_box"
        app:layout_constraintStart_toStartOf="@id/iv_one_month_saving_box"/>

    <TextView
        android:id="@+id/tv_one_month_saving_start"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_one_month_saving_start"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white0"
        android:textSize="15sp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="42.5dp"
        app:layout_constraintTop_toTopOf="@id/iv_one_month_saving_box"
        app:layout_constraintStart_toStartOf="@id/iv_one_month_saving_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>