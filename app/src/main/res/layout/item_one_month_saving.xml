<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/shape_darkgray0_fill_15_rect"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_lion_31"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:src="@drawable/ic_lion_31"
        android:layout_marginTop="29dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_everyday_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_everyday_saving"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/gray8"
        android:textSize="12sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_lion_31"/>

    <TextView
        android:id="@+id/tv_one_month_saving_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_one_month_saving_start"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/white0"
        android:textSize="15sp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintStart_toStartOf="@id/tv_everyday_saving"
        app:layout_constraintTop_toBottomOf="@id/tv_everyday_saving"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>