<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape_darkgray0_fill_15_rect"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/tv_credit_score"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_credit_score"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:textColor="@color/white0"
        android:layout_marginStart="19dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/ib_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_cancel"
        android:background="@null"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_btn_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="13dp"
        android:paddingVertical="8dp"
        android:gravity="center"
        android:text="@string/tv_btn_limit"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:background="@drawable/shape_yellow0_fill_20_rect"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintTop_toBottomOf="@id/ib_btn_cancel"
        app:layout_constraintEnd_toEndOf="@id/ib_btn_cancel"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>