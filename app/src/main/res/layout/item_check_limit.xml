<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_check_limit_box"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:src="@drawable/rounded_box_darkgray"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/username"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:textColor="@color/white0"
        android:layout_marginStart="19dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toTopOf="@id/iv_check_limit_box"
        app:layout_constraintStart_toStartOf="@id/iv_check_limit_box"/>

    <TextView
        android:id="@+id/tv_score1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_score1"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:textColor="@color/white0"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toTopOf="@id/iv_check_limit_box"
        app:layout_constraintStart_toEndOf="@id/tv_username"/>

    <TextView
        android:id="@+id/tv_score2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/tv_score2"
        android:textAppearance="@style/TextAppearance.KakaoBank.sub2_semi_12"
        android:textColor="@color/white0"
        android:layout_marginStart="19dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_score1"
        app:layout_constraintStart_toStartOf="@id/iv_check_limit_box"/>

    <ImageButton
        android:id="@+id/iv_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_cancel"
        android:background="@null"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@id/iv_check_limit_box"
        app:layout_constraintEnd_toEndOf="@id/iv_check_limit_box"/>

    <ImageButton
        android:id="@+id/iv_btn_limit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_limit"
        android:background="@null"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/iv_check_limit_box"
        app:layout_constraintEnd_toEndOf="@id/iv_check_limit_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>