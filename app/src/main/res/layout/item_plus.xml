<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_plus_box"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/shape_darkgray0_fill_15_rect"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="17dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_plus"
        app:layout_constraintTop_toTopOf="@id/cl_plus_box"
        app:layout_constraintBottom_toBottomOf="@id/cl_plus_box"
        app:layout_constraintStart_toStartOf="@id/cl_plus_box"
        app:layout_constraintEnd_toEndOf="@id/cl_plus_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>