<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_plus_box"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:src="@drawable/rounded_box_darkgray"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_btn_plus"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="158dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/iv_plus_box"
        app:layout_constraintStart_toStartOf="@id/iv_plus_box"
        app:layout_constraintEnd_toEndOf="@id/iv_plus_box"/>

</androidx.constraintlayout.widget.ConstraintLayout>