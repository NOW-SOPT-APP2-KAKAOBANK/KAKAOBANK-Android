<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_transfer_account"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:background="@drawable/shape_line_circle"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_transfer_account"
            app:layout_constraintEnd_toStartOf="@id/iv_item_transfer_bookmark"
            app:layout_constraintStart_toEndOf="@id/iv_item_transfer_account"
            app:layout_constraintTop_toTopOf="@id/iv_item_transfer_account">

            <TextView
                android:id="@+id/tv_item_transfer_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:textAppearance="@style/TextAppearance.KakaoBank.body7_regular_14"
                tools:text="김미정" />

            <TextView
                android:id="@+id/tv_item_transfer_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.KakaoBank.number2_regular_11"
                android:textColor="@color/gray8"
                tools:text="농협 3520257502893" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_transfer_bookmark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_transfer_bookmark_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>